<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui">

    <ui:style>
        .mb-0 { margin-bottom: 0; }
    </ui:style>

    <m:MaterialContainer>
        <m:MaterialRow>
            <m:MaterialColumn grid="s4">
                <m:MaterialButton ui:field="aggiungiElementoButton" margin="8" text="add" waves="LIGHT" textColor="WHITE"
                                  iconType="POLYMER"
                                  iconPosition="LEFT"/>
            </m:MaterialColumn>
            <m:MaterialColumn grid="s4">
                <m:MaterialButton ui:field="rimuoviUltimoElementoButton" margin="8" text="rm last" waves="LIGHT" backgroundColor="RED"
                                  textColor="WHITE"
                                  iconType="POLYMER" iconPosition="RIGHT"/>
            </m:MaterialColumn>
            <m:MaterialColumn grid="s4">
                <m:MaterialButton ui:field="rimuoviTuttoButton" margin="8" text="rm all" waves="RED" backgroundColor="WHITE"
                                  textColor="BLACK"
                                  iconType="POLYMER" iconPosition="RIGHT" iconColor="RED"/>
            </m:MaterialColumn>
        </m:MaterialRow>
        <m:MaterialRow>
            <m:MaterialColumn grid="s12">
                <m:MaterialCollapsible type="POPOUT" grid="s12 m6 l8" ui:field="collapsiblesContainer">

                </m:MaterialCollapsible>
            </m:MaterialColumn>
        </m:MaterialRow>
    </m:MaterialContainer>


</ui:UiBinder>
