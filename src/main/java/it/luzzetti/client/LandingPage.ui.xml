<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui">

    <m:MaterialPanel containerEnabled="true" textAlign="CENTER">
        <m:MaterialRow>

            <m:MaterialColumn grid="s6">
                <m:MaterialCard hoverable="true" backgroundColor="WHITE" textColor="WHITE">
                    <m:MaterialCardImage waves="LIGHT">
                        <m:MaterialImage
                                url="http://thatgrapejuice.net/wp-content/uploads/2013/08/pharrell-williams-that-grape-juice.png"/>
                    </m:MaterialCardImage>
                    <m:MaterialCardContent backgroundColor="BLUE_GREY_DARKEN_3" layoutPosition="RELATIVE"
                                           paddingBottom="62">
                        <m:MaterialAnchorButton type="FLOATING"
                                                backgroundColor="BLUE_LIGHTEN_1"
                                                iconType="PLAY_ARROW" size="LARGE"
                                                waves="DEFAULT"
                                                layoutPosition="ABSOLUTE" right="32" top="-32"/>
                        <m:MaterialLabel text="Pharell Williams" fontSize="2em"/>
                        <m:MaterialLabel text="Love Yourself to Dance" fontSize="1.2em"/>
                    </m:MaterialCardContent>
                    <m:MaterialCardAction backgroundColor="BLUE_GREY" height="88px">
                        <m:MaterialImage grid="l2" width="72px" height="48px" addStyleNames="circle"
                                         url="https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcRi9lfCkLutb7ugJlIjn84qWNoiICopC-Vyx7QQJRHF5E7GlqFG"/>
                        <m:MaterialLabel grid="l8" paddingTop="12" text="Lady Gaga / Telephone"
                                         fontSize="1.2em" addStyleNames="truncate"/>
                    </m:MaterialCardAction>
                </m:MaterialCard>
            </m:MaterialColumn>

            <m:MaterialColumn grid="s6">
                <m:MaterialCard hoverable="true" backgroundColor="WHITE" textColor="WHITE">
                    <m:MaterialCardImage waves="LIGHT">
                        <m:MaterialImage
                                url="http://thatgrapejuice.net/wp-content/uploads/2013/08/pharrell-williams-that-grape-juice.png"/>
                    </m:MaterialCardImage>
                    <m:MaterialCardContent backgroundColor="BLUE_GREY_DARKEN_3" layoutPosition="RELATIVE"
                                           paddingBottom="62">
                        <m:MaterialAnchorButton type="FLOATING"
                                                backgroundColor="BLUE_LIGHTEN_1"
                                                iconType="PLAY_ARROW" size="LARGE"
                                                waves="DEFAULT"
                                                layoutPosition="ABSOLUTE" right="32" top="-32"/>
                        <m:MaterialLabel text="Pharell Williams" fontSize="2em"/>
                        <m:MaterialLabel text="Love Yourself to Dance" fontSize="1.2em"/>
                    </m:MaterialCardContent>
                    <m:MaterialCardAction backgroundColor="BLUE_GREY" height="88px">
                        <m:MaterialImage grid="l2" width="72px" height="48px" addStyleNames="circle"
                                         url="https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcRi9lfCkLutb7ugJlIjn84qWNoiICopC-Vyx7QQJRHF5E7GlqFG"/>
                        <m:MaterialLabel grid="l8" paddingTop="12" text="Lady Gaga / Telephone"
                                         fontSize="1.2em" addStyleNames="truncate"/>
                    </m:MaterialCardAction>
                </m:MaterialCard>
            </m:MaterialColumn>
        </m:MaterialRow>

        <m:MaterialRow>
            <m:MaterialColumn grid="s12">
                <m:MaterialButton text="Go baby" waves="DEFAULT" backgroundColor="WHITE" textColor="BLACK"/>
            </m:MaterialColumn>
        </m:MaterialRow>
    </m:MaterialPanel>

</ui:UiBinder>
