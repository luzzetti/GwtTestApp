<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui"
>

    <m:MaterialPanel>
        <m:MaterialRow>
            <m:MaterialColumn grid="s3" padding="12" border="2px solid #ffffff" textAlign="CENTER">
                <m:MaterialTextBox label="Nome" ui:field="nome"/>
            </m:MaterialColumn>
            <m:MaterialColumn grid="s3" padding="12" border="2px solid #ffffff" textAlign="CENTER">
                <m:MaterialTextBox label="Cognome" ui:field="cognome"/>
            </m:MaterialColumn>
            <m:MaterialColumn grid="s3" padding="12" border="2px solid #ffffff" textAlign="CENTER">
                <m:MaterialTextBox label="email" ui:field="email"/>
            </m:MaterialColumn>
            <m:MaterialColumn grid="s3" padding="12" border="2px solid #ffffff" textAlign="CENTER">
                <m:MaterialTextBox ui:field="codiceFiscale" label="Codice Fiscale"/>
            </m:MaterialColumn>
        </m:MaterialRow>
        <m:MaterialRow>
            <m:MaterialColumn grid="s3" padding="12" border="2px solid #ffffff" textAlign="CENTER">

            </m:MaterialColumn>
        </m:MaterialRow>
    </m:MaterialPanel>

</ui:UiBinder>
